{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "outDir": "dist",
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "baseUrl": "src"
  },
  "include": ["src/**/*", "../typings/**/*"]
}
