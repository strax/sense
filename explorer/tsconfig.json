{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es2015",
    "pretty": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "plugins": [{ "name": "typescript-styled-plugin" }]
  },
  "include": ["src/**/*", "../typings/**/*"]
}
