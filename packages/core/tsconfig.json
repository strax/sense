{
  "compilerOptions": {
    "outDir": "dist",
    "module": "es2015",
    "target": "es2015",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "declaration": true
  },
  "include": ["src/**/*", "../typings/**/*"]
}
